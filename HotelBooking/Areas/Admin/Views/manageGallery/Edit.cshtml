@{
    ViewBag.Title = "";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

@using HotelBooking.Models;
@model Gallery

<script>
    function DisplayImage(result) {
        if (result.files && result.files[0]) {
            var fileReader = new FileReader();
            fileReader.onload = function (e) {
                $("#imgageLink").attr('src', e.target.result);
            }
            fileReader.readAsDataURL(result.files[0]);
        }
    }
</script>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Sửa</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="x_panel">
            <div class="x_content">
                <form method="post">
                    <div class="modal-body">
                        <div class="container">
                            <div class="form-group col-md-6">
                                <label>Id</label>
                                <input class="form-control" name="Id_Glr" value="@Model.Id_Glr"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Image</label>
                                <input type="File" class="form-control" name="ImageLink"
                                    title="Load Image" onchange="DisplayImage(this)" value="@Model.ImageLink"/>
                                <img id="imgageLink" height="200" width="200"
                                    style="border: solid" src="/Content/User/files/images/gallery/@Model.ImageLink" alt="avatarGal" height="50" width="50"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Active</label><br />
                                <input type="radio" name="Active" value="True" />Yes<br />
                                <input type="radio" name="Active" value="False" />No
                           </div>
                                <div class="form-group col-md-6">
                                    <button type="submit" class="btn btn-success">Save</button>
                                </div>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>
