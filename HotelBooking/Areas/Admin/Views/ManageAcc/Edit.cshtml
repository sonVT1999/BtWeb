@{
    ViewBag.Title = "";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

@using HotelBooking.Models;
@model User

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Sửa</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="x_panel">
            <div class="x_content">
                <form method="post">
                    <div class="modal-body">
                        <div class="container">
                            <div class="form-group col-md-6">
                                <label>IdUser</label>
                                <input class="form-control" name="Id_User" value="@Model.Id_User" />
                            </div>
                                <div class="form-group col-md-6">
                                <label>UserName</label>
                                <input class="form-control" name="UserName" value="@Model.UserName" />
                            </div>
                                <div class="form-group col-md-6">
                                <label>PassWord</label>
                                <input class="form-control" name="PassWord" value="@Model.PassWord" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Permission</label><br />
                                <input name="Permission" type="radio" value= "True" />Quản lý<br />
                                <input name="Permission" type="radio" value= "False" />Khách hàng
                                @*<input name="Permission" value="@(Model.Permission == true? "Quản lý":"Khách hàng")"/>*@
                            </div>
                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
