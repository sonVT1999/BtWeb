@{
    ViewBag.Title = "";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

@using HotelBooking.Models;
@model User

<script>
    function DisplayImage(result) {
        if (result.files && result.files[0]) {
            var fileReader = new FileReader();
            fileReader.onload = function (e) {
                $("#ImageLink").attr('src', e.target.result);
            }
            fileReader.readAsDataURL(result.files[0]);
        }
    }
</script>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3></h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="x_panel">
            <div class="x_content">
                <form method="post">
                    <div class="modal-body">
                        <div class="container">
                            <div class="form-group col-md-6">
                                <label>Id_User</label>
                                <input class="form-control" name="Id_User" value="@Model.Id_User"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Name</label>
                                <input class="form-control" name="Name" value="@Model.Name"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Permission:</label><br />
                                <input name="Permission" type="radio" value="True" />Nhân viên<br />
                                <input name="Permission" type="radio" value="False" />Khách hàng
                            </div>
                            <div class="form-group col-md-6">
                                <label>Sex:</label> <br />
                                <input name="Sex" type="radio" value="True" />Nam <br />
                                <input name="Sex" type="radio" value="False" />Nữ
                               @* <input name="Sex" value="@(Model.Sex == true? "Nam":"Nữ")"/>*@
                            </div>
                            <div class="form-group col-md-6">
                                <label>Email</label>
                                <input class="form-control" name="Email" value="@Model.Email"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Address</label>
                                <input class="form-control" name="Address" value="@Model.Address"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Phone</label>
                                <input class="form-control" name="Phone" value="@Model.Phone"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Image</label>
                                <input type="File" class="form-control" name="ImageLink"
                                title="Load Image" onchange="DisplayImage(this)" value="@Model.ImageLink"/>
                                <img id="ImageLink" height="200" width="200"
                                    style="border: solid"  src="/Content/Admin/images/@Model.ImageLink" alt="avatarCus" height="50" width="50"/>
                            </div>
                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

