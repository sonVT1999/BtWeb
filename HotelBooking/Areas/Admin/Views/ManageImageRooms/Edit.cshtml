@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

@using HotelBooking.Models;
@model ImageRoom

<script>
    function DisplayImage(result) {
        if (result.files && result.files[0]) {
            var fileReader = new FileReader();
            fileReader.onload = function (e) {
                $("#imageLink").attr('src', e.target.result);
            }
            fileReader.readAsDataURL(result.files[0]);
        }
    }
</script>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Sửa</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="x_panel">
            <div class="x_content">
                <form method="post">
                    <div class="modal-body">
                        <div class="container">
                            <div class="form-group col-md-6">
                                <label>Id_Room</label>
                                <select class="form-control" name="Id_Room">
                                    <option value="MP01">MP01</option>
                                    <option value="MP02">MP02</option>
                                    <option value="MP03">MP03</option>
                                    <option value="MP04">MP04</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Image</label>
                                <input type="File" class="form-control" name="imageLink"
                                    title="Load Image" onchange="DisplayImage(this)" value="@Model.imageLink"/>
                                <img id="imageLink" height="200" width="200"
                                    style="border: solid" src="/Content/User/files/images/Room/@Model.Room.RoomType.Name/@Model.imageLink" alt="imageRoom" height="50" width="50" />
                            </div>
                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                            <div class="form-group col-md-6">
                                <input type="hidden" class="form-control" name="Id_image" value="@Model.Id_image"/>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


