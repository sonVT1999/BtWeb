@{
    ViewBag.Title = "DangKy";
}


<html>
<head>
    <title>Sign Up</title>
    <script src="/Content/User/Content/js/jquery.min.js"></script>
    <!-- Custom Theme files -->
    <link href="/Content/User/Content/css/styleLogin.css" rel="stylesheet" type="text/css" />

    <!--Google Fonts-->
    <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
    <!--header start here-->
    <div class="header">
        <div class="header-main">
            <h1>Sign Up</h1>
            <div class="header-bottom">
                <div class="header-right w3agile">

                    <div class="header-left-bottom agileinfo">

                        <form method="post">
                            <input type="text" value="User name" name="UserName" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'User name';}" />
                            <input type="text" value="Password" name="PassWord" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'password';}" />
                            <input type="text" value="Name" name="Name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Name';}" />
                            @*<input type="text" value="sex" name="Sex" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Sex';}" />*@
                            <div style="color:white" class="form-group col-md-6">
                                                <label>Sex:</label> <br />
                                                <input name="Sex" type="radio" value="True" />Nam <br />
                                                <input name="Sex" type="radio" value="False" />Nữ
                                            </div>
                            <input type="text" value="Email" name="Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}" />
                            <input type="text" value="Address" name="Address" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Address';}" />
                            <input type="text" value="Phone" name="Phone" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Phone';}" />
                            <input type="hidden" value="false" name="Permission"  {this.value = 'Permission';}" />
                            <input type="submit" value="Sign Up">
                        </form>


                    </div>
                </div>

            </div>
        </div>
    </div>

    <!--header end here-->
    <div class="copyright">
        <p>

            ©Copyright &copy; 2020 by MTA TEAM
        </p>
    </div>
    <!--footer end here-->
</body>
</html>