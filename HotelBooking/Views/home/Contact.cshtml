@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- SLIDER -->
<title>Lien He</title>


<link href="/Content/User/Plugins/Validate/jquery-validation-1.13.1/jquery-validation.css" rel="stylesheet" />
<script src="/Content/User/Plugins/Validate/jquery-validation-1.13.1/jquery.validate.min.js"></script>
<script src="/Content/User/Plugins/Validate/jquery-validation-1.13.1/additional-methods.min.js"></script>


<div id="outerafterheader">
    <div class="container">
        <div class="row">
            <div class="twelve columns" id="afterheader">
                <h1 class="pagetitle">Liên Hệ </h1>

            </div>
        </div>
    </div>
</div>

<div id="outermain">
    <div id="maincontainer">
        <div class="container">
            <div class="row">
                <section id="maincontent">
                    <section id="content" class="twelve columns">
                        <div id="ts-portfolio">
                            <div class="row ">
                                <section class="single content-detail">
                                    <section class="eight columns positionleft">
                                        <article class="post">
                                            <div class="page  articlecontainer">
                                                <article class="entry-content">
                                                    <p>
                                                        <br />
                                                        <strong>GRAND HOTEL</strong><br>
                                                        Address: 210 Hoàng Quốc Việt, Hà Nội <br />
                                                        Tel: 0357778089<br />
                                                        Email: <a href="#">dat1999vn@gmail.com</a><br>
                                                    </p>
                                                    <hr />
                                                    <br />

                                                    <form id="contactform" class="form-horizontal" method="post" action="Contact">
                                                        <div class="row">
                                                            <input type="hidden" name="Id_Customer" value="@ViewBag.Id_User"/>
                                                            <div class="form-group">
                                                                <label for="Content"
                                                                       class="col-sm-4 control-label twelve">
                                                                    Nội Dung
                                                                </label>
                                                                <div class="col-sm-4">
                                                                    <input type="text" name="Content"/>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="message"
                                                                       class="col-sm-2 control-label"></label>
                                                                <div class="col-sm-10">
                                                                    <input style="margin-left: 0px; margin-top: 15px;"
                                                                           type="submit" name="Send" value="Gửi"
                                                                           id="Send" class="btn btn-primary">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </article><!-- close #contact-wrapper -->
                                                <div class="clearfix"></div>
                                            </div>
                                        </article>
                                    </section>
                                    <section>
                                        <aside id="sidebar" class="four columns positionright">
                                            <div class="widget-area">
                                                <ul>
                                                    <li id="text-3" class="widget-container widget_text">
                                                        <div class="wrap-mode-check">
                                                            <h3 class="widget-title">
                                                                Đặt phòng khách sạn
                                                            </h3>
                                                            <div id="wrap-check-one">
                                                                <form method="post" action="~/home/search" id="check-room">
                                                                    <div class="av-persion">
                                                                        <div class="av-item-pertion">
                                                                            <span>Người lớn:</span>
                                                                            <select id="av-adult"
                                                                                    name="Adult">
                                                                                <option>1</option>
                                                                                <option>2</option>
                                                                                <option>3</option>
                                                                                <option>4</option>
                                                                                <option>5</option>
                                                                            </select>
                                                                        </div>
                                                                        <div class="av-item-pertion">
                                                                            <span>Trẻ em:</span>
                                                                            <select id="av-child"
                                                                                    name="Child">
                                                                                <option>0</option>
                                                                                <option>1</option>
                                                                                <option>2</option>
                                                                                <option>3</option>
                                                                                <option>4</option>
                                                                                <option>5</option>
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                    <input type="submit" id="av-buton"
                                                                           value="Tìm phòng trống"
                                                                           class="btn btn-primary"
                                                                           style=" padding: 9px 20px; margin-top: 10px; width: 100%" />
                                                                </form>
                                                            </div>
                                                        </div>
                                                        <style>
                                                            .av-check-time,
                                                            .av-persion,
                                                            .av-item-pertion {
                                                                margin-bottom: 8px;
                                                            }

                                                            #check-room span {
                                                                display: block;
                                                                width: 86px;
                                                                float: left;
                                                            }

                                                            #check-room input.checkdate,
                                                            #check-room select {
                                                                padding: 5px 10px;
                                                                padding: 5px 10px;
                                                                background: #ffffff;
                                                                color: #121212;
                                                                border: 1px solid #cacaca;
                                                            }
                                                        </style>
                                                    </li>
                                                </ul>
                                            </div>
                                        </aside>
                                    </section>
                                </section>
                            </div>
                        </div>
                    </section>
                </section>
            </div>
        </div>
    </div>
</div>

<style>
    .form-group {
        margin-bottom: 10px;
    }

        .form-group label {
            color: #444;
        }
</style>
