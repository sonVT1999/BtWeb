@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var introduce = (List<HotelBooking.Models.Introduce>)ViewBag.Introduces;


}

@using HotelBooking.Models;
<title>Gioi Thieu</title>


<div id="outerafterheader">
    <div class="container">
        <div class="row">
            <div class="twelve columns" id="afterheader">
                <h1 class="pagetitle nodesc">Welcome to Grand Hotel</h1>
            </div>
        </div>
    </div>
</div>

<div id="outermain">
    <div id="maincontainer">
        <div class="container">
            <div class="row">
                <section id="maincontent">
                    <section id="content" class="twelve columns">
                        <div id="ts-portfolio">
                            <div class="row ">
                                <section class="single content-detail">
                                    <section class="eight columns positionleft">
                                        <article class="post">
                                            <div class="articlecontainer">



                                                @foreach (Introduce item in introduce)
                                                {
                                                    <div class="postimg" style="margin-bottom: 0px;">
                                                        <img src="~/Content/User/files/images/Article/@item.imageLink"
                                                             class="img-avata-post" alt="Welcome to Grand Hotel">
                                                    </div>
                                                    <div class="entry-content" style="padding-top: 20px;">
                                                        <p style="text-align: justify">

                                                            @item.note1
                                                            <br />
                                                            <br />
                                                            @item.note2<br />
                                                            <br />
                                                            @item.note3<br />
                                                            <br />
                                                            @item.note4<br />
                                                            <br />
                                                            @item.note5
                                                        </p>
                                                    </div>
                                                }
                                                <div class="clear"></div>
                                            </div>
                                        </article>
                                        <div class="clear"></div>
                                        <!-- end post -->
                                    </section>
                                    <section>
                                        <aside id="sidebar" class="four columns positionright">
                                            <div class="widget-area">
                                                <ul>
                                                    <li id="text-3" class="widget-container widget_text">
                                                        <div class="wrap-mode-check">
                                                            <h3 class="widget-title">Đặt phòng khách sạn
                                                            </h3>
                                                            <div id="wrap-check-one">
                                                                <form method="post" action="~/home/search" id="check-room">
                                                                    <div class="av-persion">
                                                                        <div class="av-item-pertion">
                                                                            <span>Người lớn:</span>
                                                                            <select id="av-adult"
                                                                                name="Adult">
                                                                                <option>1</option>
                                                                                <option>2</option>
                                                                                <option>3</option>
                                                                                <option>4</option>
                                                                                <option>5</option>
                                                                            </select>
                                                                        </div>
                                                                        <div class="av-item-pertion">
                                                                            <span>Trẻ em:</span>
                                                                            <select id="av-child"
                                                                                name="Child">
                                                                                <option>0</option>
                                                                                <option>1</option>
                                                                                <option>2</option>
                                                                                <option>3</option>
                                                                                <option>4</option>
                                                                                <option>5</option>
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                    <input type="submit" id="av-buton"
                                                                        value="Tìm phòng trống"
                                                                        class="btn btn-primary"
                                                                        style="padding: 9px 20px; margin-top: 10px; width: 100%" />
                                                                </form>
                                                            </div>
                                                        </div>
                                                        <style>
                                                            .av-persion,
                                                            .av-item-pertion {
                                                                margin-bottom: 8px;
                                                            }

                                                            #check-room span {
                                                                display: block;
                                                                width: 86px;
                                                                float: left;
                                                            }

                                                            #check-room input.checkdate,
                                                            #check-room select {
                                                                padding: 5px 10px;
                                                                padding: 5px 10px;
                                                                background: #ffffff;
                                                                color: #121212;
                                                                border: 1px solid #cacaca;
                                                            }
                                                        </style>
                                                    </li>
                                                </ul>
                                            </div>
                                        </aside>
                                    </section>
                                    <div class="clear"></div>
                                </section>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </section>
                </section>
            </div>
        </div>
    </div>
</div>
<!-- END MAIN CONTENT -->
