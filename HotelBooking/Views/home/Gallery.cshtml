@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var gallery = (List<HotelBooking.Models.Gallery>)ViewBag.Gallerys;

}
@using HotelBooking.Models;


<title>Gallery</title>

<!-- SLIDER -->
<!-- Css prettyphoto-master -->
<link href="/Content/User/Plugins/prettyphoto-master/css/prettyPhoto.css" rel="stylesheet" />
<!-- Jquery prettyphoto-master -->
<script src="/Content/User/Plugins/prettyphoto-master/js/jquery.prettyPhoto.js"></script>

<div id="outerafterheader">
    <div class="container">
        <div class="row">
            <div class="twelve columns" id="afterheader">
                <h1 class="pagetitle">Gallery </h1>
            </div>
        </div>
    </div>
</div>
<div id="outermain">
    <div id="maincontainer">
        <div class="container">
            <div class="row">
                <section id="maincontent">
                    <section class="eight columns positionleft">
                        <div id="ts-portfolio" style="margin-bottom: 20px;">
                            <div class="row galleryHotel">
                                @foreach (Gallery item in gallery)
                                {
                                    <div class="item one_third columns">
                                        <div class="ts-pf-img">
                                            <a class="pfzoom" href="/Content/User/files/images/gallery/@item.ImageLink"
                                               data-rel="prettyPhoto[mixed]" rel="prettyPhoto[mixed]">
                                                <img src="/Content/User/files/_thumbs/images/gallery/@item.ImageLink"
                                                     style="max-height: 159px; width: 100%;">
                                            </a>
                                        </div>
                                    </div>
                                }

                            </div>
                            <div class="clear"></div>
                        </div>

                    </section>
                    <section>
                        <aside id="sidebar" class="four columns positionright">
                            <div class="widget-area">
                                <ul>
                                    <li id="text-3" class="widget-container widget_text">
                                        <div class="wrap-mode-check">
                                            <h3 class="widget-title">Đặt phòng khách sạn
                                            </h3>
                                            <div id="wrap-check-one">
                                                <form method="post" action="~/home/Search" id="check-room">
                                                    <div class="av-persion">
                                                        <div class="av-item-pertion">
                                                            <span>Người lớn:</span>
                                                            <select id="av-adult" name="Adult">
                                                                <option>1</option>
                                                                <option>2</option>
                                                                <option>3</option>
                                                                <option>4</option>
                                                                <option>5</option>
                                                            </select>
                                                        </div>
                                                        <div class="av-item-pertion">
                                                            <span>Trẻ em:</span>
                                                            <select id="av-child" name="Child">
                                                                <option>0</option>
                                                                <option>1</option>
                                                                <option>2</option>
                                                                <option>3</option>
                                                                <option>4</option>
                                                                <option>5</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <input type="submit" id="av-buton"
                                                        value="Tìm phòng trống" class="btn btn-primary"
                                                        style="padding: 9px 20px; margin-top: 10px; width: 100%" />
                                                </form>
                                            </div>
                                        </div>
                                        <style>
                                            .av-check-time,
                                            .av-persion,
                                            .av-item-pertion {
                                                margin-bottom: 8px;
                                            }

                                            #check-room span {
                                                display: block;
                                                width: 86px;
                                                float: left;
                                            }

                                            #check-room input.checkdate,
                                            #check-room select {
                                                padding: 5px 10px;
                                                padding: 5px 10px;
                                                background: #ffffff;
                                                color: #121212;
                                                border: 1px solid #cacaca;
                                            }
                                        </style>
                                    </li>
                                </ul>
                            </div>
                        </aside>
                    </section>
                </section>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        jQuery("a[rel^='prettyPhoto']").prettyPhoto({ animationSpeed: 'slow', theme: 'pp_default', gallery_markup: '', slideshow: 2000, social_tools: '' });

    });
</script>


<!-- END MAIN CONTENT -->
