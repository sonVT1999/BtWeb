@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var proms = (List<HotelBooking.Models.Promotion>)ViewBag.Promotions;
}
@using HotelBooking.Models;



<title>Khuyen Mai</title>

<!-- SLIDER -->
<div id="outerafterheader">
    <div class="container">
        <div class="row">
            <div class="twelve columns" id="afterheader">
                <h1 class="pagetitle nodesc">KHUYẾN MÃI</h1>
            </div>
        </div>
    </div>
</div>

<div id="outermain">
    <div id="maincontainer">
        <div class="container">
            <div class="row">
                <section id="maincontent">
                    <section id="content" class="twelve columns">
                        <div id="ts-portfolio">
                            <div class="row ">
                                <section class="content-detail">
                                    <section class="eight columns positionleft">
                                        @foreach (Promotion item in proms)
                                        {
                                            <article class="post">

                                                <div class="articlecontainer">

                                                    <div class="postimg postimg-article">
                                                        <img src="/Content/User/files/images/Room/phong-deluxe/@item.ImageLink"
                                                             alt="Khuyến mãi lớn">
                                                    </div>
                                                    <h2 class="posttitle"><a href="#">Khuyến mãi lớn</a></h2>
                                                    <div class="entry-content des-article">
                                                        <p>
                                                            @item.Detail
                                                            <br />
                                                            - Khách hàng được quyền thay đổi hoặc hủy bỏ một
                                                            tuần trước khi đến mà không bị tính phí.
                                                        </p>
                                                        <div class="clear"></div>
                                                    </div>
                                                    <div class="clear"></div>

                                                </div>

                                                <br />
                                            </article>
                                        }
                                        <!-- end post -->
                                    </section>

                                    <section>
                                        <aside id="sidebar" class="four columns positionright">
                                            <div class="widget-area">
                                                <ul>
                                                    <li id="text-3" class="widget-container widget_text">
                                                        <div class="wrap-mode-check">
                                                            <h3 class="widget-title">Đặt phòng khách sạn
                                                            </h3>
                                                            <div id="wrap-check-one">
                                                                <form method="post" action="~/home/search" id="check-room">
                                                                    <div class="av-persion">
                                                                        <div class="av-item-pertion">

                                                                            <span>Người lớn:</span>
                                                                            <select id="av-adult"
                                                                                name="Adult">
                                                                                <option>1</option>
                                                                                <option>2</option>
                                                                                <option>3</option>
                                                                                <option>4</option>
                                                                                <option>5</option>
                                                                            </select>
                                                                        </div>
                                                                        <div class="av-item-pertion">
                                                                            <span>Trẻ em:</span>
                                                                            <select id="av-child"
                                                                                name="Child">
                                                                                <option>0</option>
                                                                                <option>1</option>
                                                                                <option>2</option>
                                                                                <option>3</option>
                                                                                <option>4</option>
                                                                                <option>5</option>
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                    <input type="submit" id="av-buton"
                                                                        value="Tìm phòng trống"
                                                                        class="btn btn-primary"
                                                                        style="padding: 9px 20px; margin-top: 10px; width: 100%" />
                                                                </form>
                                                            </div>
                                                        </div>
                                                        <style>
                                                            .av-check-time,
                                                            .av-persion,
                                                            .av-item-pertion {
                                                                margin-bottom: 8px;
                                                            }

                                                            #check-room span {
                                                                display: block;
                                                                width: 86px;
                                                                float: left;
                                                            }

                                                            #check-room input.checkdate,
                                                            #check-room select {
                                                                padding: 5px 10px;
                                                                padding: 5px 10px;
                                                                background: #ffffff;
                                                                color: #121212;
                                                                border: 1px solid #cacaca;
                                                            }
                                                        </style>
                                                    </li>
                                                </ul>
                                            </div>
                                        </aside>
                                        <div class="clear"></div>
                                    </section>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </section>
                </section>
            </div>
        </div>
    </div>
</div>
<!-- END MAIN CONTENT -->
